---
{{#hasXsuaa}}
xsuaa:
  parameters:
    oauth2-configuration:
      redirect-uris:
      - https://*.<your-cluster-domain>/**
{{/hasXsuaa}}
approuter:
{{#hasXsuaa}}
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/hasXsuaa}}
  image:
    repository: <your-container-registry>/{{appName}}-approuter
    tag: latest
  resources:
    limits:
      ephemeral-storage: 1G
      memory: 500M
    requests:
      ephemeral-storage: 1G
      cpu: 500m
      memory: 500M
  health:
    liveness:
      path: /
    readiness:
      path: /
backendDestinations: {}
{{^hasMultitenancy}}
srv:
  expose:
    enabled: false
  networkSecurity:
    allowNamespaceInternal: true
{{/hasMultitenancy}}