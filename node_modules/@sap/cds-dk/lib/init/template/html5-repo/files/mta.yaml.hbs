---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}

  - name: {{appName}}
    type: approuter.nodejs
    path: {{& approuterPath}}
    requires:
      - name: {{appName}}-html5-runtime

  - name: {{appName}}-app-content
    type: com.sap.application.content
    path: {{& appPath}}
    requires:
      - name: {{appName}}-destination
      - name: {{appName}}-html5-repo-host
        parameters:
          content-target: true
    build-parameters:
      build-result: resources
      requires:
      {{#apps}}
        - name: {{appName}}-app-{{app}}
          artifacts:
            - {{app}}.zip
          target-path: resources/
      {{/apps}}

  {{#apps}}
  - name: {{appName}}-app-{{app}}
    type: html5
    path: {{& appPath}}{{app}}
    build-parameters:
      build-result: dist
      builder: custom
      commands:
        - npm ci
        - npm run build
      supported-platforms: []
  {{/apps}}

resources:
  {{#hasApprouter}}
  - name: {{appName}}-html5-runtime
    type: org.cloudfoundry.managed-service
    parameters:
      service: html5-apps-repo
      service-plan: app-runtime
  {{/hasApprouter}}

  - name: {{appName}}-html5-repo-host
    type: org.cloudfoundry.managed-service
    parameters:
      service: html5-apps-repo
      service-plan: app-host

  - name: {{appName}}-destination
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
      service-plan: lite
      config:
        HTML5Runtime_enabled: true
        init_data:
          instance:
            existing_destinations_policy: update
            destinations:
              - Name: {{appName}}-srv
                URL: ~{srv-api/srv-url}
                Authentication: NoAuthentication
                Type: HTTP
                ProxyType: Internet
                HTML5.ForwardAuthToken: true
                HTML5.DynamicDestination: true
    requires:
      - name: srv-api
        group: destinations
        properties:
          name: srv-api # must be used in xs-app.json as well
          url: ~{srv-url}
          forwardAuthToken: true
