---
global:
  domain: null
  imagePullSecret: {}
srv:
  bindings: {}
  image:
    repository: <your-container-registry>/{{appName}}-srv
    tag: latest
  {{#isJava}}
  env:
    SPRING_PROFILES_ACTIVE: cloud
  {{/isJava}}
  resources:
    limits:
      ephemeral-storage: 1G
      memory: {{#isJava}}1G{{/isJava}}{{^isJava}}500M{{/isJava}}
    requests:
      ephemeral-storage: 1G
      cpu: {{#isJava}}1000m{{/isJava}}{{^isJava}}500m{{/isJava}}
      memory: {{#isJava}}1G{{/isJava}}{{^isJava}}500M{{/isJava}}
  health:
    liveness:
      path: {{#isJava}}/{{/isJava}}{{^isJava}}/health{{/isJava}}
    readiness:
      path: {{#isJava}}/{{/isJava}}{{^isJava}}/health{{/isJava}}
