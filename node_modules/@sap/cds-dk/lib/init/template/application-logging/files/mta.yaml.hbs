---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}
    requires:
      - name: {{appName}}-logging

{{#hasMultitenancy}}
  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: {{appName}}-logging
{{/hasMultitenancy}}

{{#hasApprouter}}
  - name: {{appName}}
    type: approuter.nodejs
    requires:
      - name: {{appName}}-logging
{{/hasApprouter}}

resources:
  - name: {{appName}}-logging
    type: org.cloudfoundry.managed-service
    parameters:
      service: application-logs
      service-plan: standard
