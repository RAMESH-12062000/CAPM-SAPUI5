---
{{#hasMultitenancy}}
sidecar:
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/hasMultitenancy}}
{{#hasApprouter}}
approuter:
  bindings:
    auth:
      serviceInstanceName: xsuaa
{{/hasApprouter}}
srv:
  bindings:
    auth:
      serviceInstanceName: xsuaa
xsuaa:
  serviceOfferingName: xsuaa
  servicePlanName: application
  parameters:
    xsappname: {{appName}}
    tenant-mode: {{#hasMultitenancy}}shared{{/hasMultitenancy}}{{^hasMultitenancy}}dedicated{{/hasMultitenancy}}
{{#hasApprouter}}
    oauth2-configuration:
      redirect-uris:
      - https://*.<your-cluster-domain>/**
{{/hasApprouter}}
